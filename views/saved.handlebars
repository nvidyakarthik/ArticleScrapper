<div class="container">
    <div class="row">
        <div class="col-xs-12">
        
            <ul>
                {{#each savedArticleList}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="{{link}}" target="_blank">{{headline}}</a>
                        <button type="button" class="btn btn-danger" id="delArticle" data-id="{{_id}}">DELETE FROM SAVED</button>
                        <button type="button" class="btn btn-success" id="notesArticle" data-toggle="modal" data-target="#exampleModal" data-id="{{_id}}">ARTICLE NOTES</button>
                                               
                    </div>
                    <div class="panel-body"><p>{{summary}}</p></div>
                </div>
                {{/each}}
            </ul>
        </div>
    </div>    
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div id="notes" class="well">
            No Notes for this Article yet.
          </div>
          <div class="form-group">
            
            <textarea class="form-control" id="notes-text" placeholder="New Note"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>