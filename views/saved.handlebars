<div class="container">
    <div class="row">
           
            <ul>
                {{#each savedArticleList}}
                <div class="col-xs-12 col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="{{link}}" target="_blank">{{headline}}</a>
                        
                                               
                    </div>
                    <div class="panel-body">
                      <p>{{summary}}</p>
                      <button type="button" class="btn btn-success" id="delArticle" data-id="{{_id}}">REMOVE SAVED</button>
                      <button type="button" class="btn btn-success" id="notesArticle" data-toggle="modal" data-target="#notesModal" data-id="{{_id}}">ARTICLE NOTES</button>
                    </div>
                </div>
                </div>
                {{/each}}
            </ul>
        
    </div>    
</div>

<div class="modal fade" id="notesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="notes-form">
        <div class="form-group">            
            <textarea class="form-control" id="notesinput" placeholder="New Note"></textarea>
        </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary saveNoteBtn">Save</button>
      </div>
    </div>
  </div>
</div>